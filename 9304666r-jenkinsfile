pipeline {
  agent any
  parameters {
    string(name: 'VERSION', defaultValue: '1.0.0', description: 'Release version')
}
stages {
  stage('Build') {
    steps {
      echo "Build version ${params.VERSION}"
      // Add build steps
    }
    stage('Test') {
      steps {
        echo "Testing version ${params.VERSION}"
      // Add test steps
    }
    stage('Deploy') {
      steps {
        echo "Deploting version ${params.VERSION}"
      // Add deployment steps
    }
  }
}
}
}
}
