pipeline {
    agent {
        label 'master'
    }
    
    tools {
        maven 'maven3'
    }

    options {
        buildDiscarder(logRotator(daysToKeepStr: '15', numToKeepStr: '10'))
    }

    environment {
        APP_NAME = "STUDENT_APP"
        APP_ENV = "DEV"
        RELEASE_ENV = "ST1-9304666r"
        ST2_ENV = "ST2-9304666r"  // New environment variable for Stage 2
        CONTAINER_NAME = "server1-9304666r"
        IMAGE_NAME = "svr-image-9304666r"
        HOST_PORT = "32700"
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                cleanWs()
                sh "echo 'Cleaned Up Workspace for ${APP_NAME}'"
            }
        }
        
        stage('Code Checkout') {
            steps {
                git branch: 'main', 
                   url: 'https://github.com/khongwka/cdv1c03-repo.git'
            }
        }

        stage('Code Build') {
            steps {
                sh 'mvn install -Dmaven.test.skip=false'
            }
        }

        stage('Setup Release Environment') {
            steps {
                script {
                    sh """
                    echo "Creating release environment: ${RELEASE_ENV}"
                    # Add your actual environment setup commands here
                    """
                }
                echo "Setup Release Environment Completed."
            }
        }

        // New Stage 2: Container Deployment
        stage('ST2-9304666r') {
            steps {
                script {
                    // Stop and remove any existing container with same name
                    sh """
                    docker stop ${CONTAINER_NAME} || true
                    docker rm ${CONTAINER_NAME} || true
                    """

                    // Run new container with specified parameters
                    sh """
                    docker run -d \
                        --name ${CONTAINER_NAME} \
                        -p ${HOST_PORT}:80 \
                        ${IMAGE_NAME}
                    """

                    // Verify container is running
                    sh "docker ps | grep ${CONTAINER_NAME}"

                    // Print success message
                    echo "${ST2_ENV}: Server1 is successfully created"
                }
            }
        }

        stage('Printing All Global Variables') {
            steps {
                sh 'env'
            }
        }
    }
}
